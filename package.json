  },
  "keywords": ["Tailwind", "Tailwind JIT"],
  "author": "Shadow Smith",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.2.5",
    "postcss": "^8.2.8",
    "postcss-cli": "^8.3.1",
    "tailwindcss": "^2.1.1"
  }
}
