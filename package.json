{
  "name": "tailwind-jit-demo",
  "version": "1.0.0",
  "description": "This is a Tailwind JIT demo repo created by Shadow Smith.",
  "main": "index.js",
  "scripts": {
    "serve": "cd src && npx live-server",
    "dev": "postcss tailwind.css -o ./src/css/styles.css --verbose -w",
